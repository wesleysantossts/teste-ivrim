{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es5"
    ],  
    "removeComments": true,                 
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["src/infrastructure/*"],
      "@controllers/*": ["src/controllers/*"],
      "@usecases/*": ["src/usecases/*"],
      "@services/*": ["src/services/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
}
